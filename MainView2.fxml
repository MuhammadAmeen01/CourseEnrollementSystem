<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller">
    <TableView fx:id="tableViewCourses" prefHeight="400.0" prefWidth="600.0">
        <columns>
            <TableColumn text="Course Name" fx:id="colCourseName"/>
            <TableColumn text="Capacity" fx:id="colCapacity"/>
            <TableColumn text="Year" fx:id="colYear"/>
            <TableColumn text="Delivery Mode" fx:id="colDeliveryMode"/>
            <TableColumn text="Day of Lecture" fx:id="colDayOfLecture"/>
            <TableColumn text="Time of Lecture" fx:id="colTimeOfLecture"/>
            <TableColumn text="Duration of Lecture (hour)" fx:id="colDuration"/>
        </columns>
    </TableView>
    <Button text="Enroll" onAction="#enrollCourse"/>
    <Button text="Withdraw" onAction="#withdrawCourse"/>
</VBox>
