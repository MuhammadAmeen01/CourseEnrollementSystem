<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="signupcontroller">

    <children>
        <VBox alignment="CENTER" spacing="10">
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="firstNameField" promptText="First Name" />
            <TextField fx:id="lastNameField" promptText="Last Name" />
            <TextField fx:id="studentNumberField" promptText="Student Number" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button onAction="#signupButtonClicked" text="Sign Up" />
            <Button onAction="#closeButtonClicked" text="Close" />
            <Hyperlink onAction="#alreadyHaveAccountClicked" text="Already have an account" />
        </VBox>
    </children>
</AnchorPane>
